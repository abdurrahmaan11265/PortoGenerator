<%- include('partials/header'); %>
    <form class="form1 container upload-form mt-5" action="/create" method="post" enctype="multipart/form-data">
        <p>Choose a colour pallet :</p>
        <div class="form-check form-check-inline col-lg-2 col-md-3 ">
            <input class="form-check-input" type="radio" id="pallet1" name="pallet" value="option1" checked>
            <label class="form-check-label" for="pallet1"><img src="images/colour_pallets/Avatar.png" alt="1"></label>
        </div>
        <div class="form-check form-check-inline col-lg-2 col-md-3 ">
            <input class="form-check-input" type="radio" id="pallet2" name="pallet" value="option2">
            <label class="form-check-label" for="pallet2"><img src="images/colour_pallets/Bat_man.png" alt="2"></label>
        </div>
        <div class="form-check form-check-inline col-lg-2 col-md-3 ">
            <input class="form-check-input" type="radio" id="pallet3" name="pallet" value="option3">
            <label class="form-check-label" for="pallet3"><img src="images/colour_pallets/Black_adam.png" alt="3"></label>
        </div>
        <div class="form-check form-check-inline col-lg-2 col-md-3 ">
            <input class="form-check-input" type="radio" id="pallet4" name="pallet" value="option4">
            <label class="form-check-label" for="pallet4"><img src="images/colour_pallets/Minions.png" alt="4"></label>
        </div>
        <div class="form-check form-check-inline col-lg-2 col-md-3 ">
            <input class="form-check-input" type="radio" id="pallet5" name="pallet" value="option5">
            <label class="form-check-label" for="pallet5"><img src="images/colour_pallets/The_gray_man.png" alt="5"></label>
        </div>
        <div class="form-check form-check-inline col-lg-2 col-md-3 ">
            <input class="form-check-input" type="radio" id="pallet6" name="pallet" value="option6">
            <label class="form-check-label" for="pallet6"><img src="images/colour_pallets/Thor.png" alt="6"></label>
        </div>
        <div class="form-check form-check-inline col-lg-2 col-md-3 ">
            <input class="form-check-input" type="radio" id="pallet7" name="pallet" value="option7">
            <label class="form-check-label" for="pallet7"><img src="images/colour_pallets/Top_gun.png" alt="7"></label>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="name" class="form-label">Name & your image:</label>
                <input type="text" name="name" class="form-control" id="name" required>
                <input type="file" name="image" class="form-control upload-file" accept="image/png, image/gif, image/jpeg, image/jpg" data-max-size="1000000" required>
            </div>
            <div class="col-md-6">
                <label for="profession" class="form-label">Profession:</label>
                <input type="text" name="profession" class="form-control" id="profession" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="email" class="form-label">Email:</label>
                <input type="email" name="email" class="form-control" id="email" required>
            </div>
            <div class="col-md-6">
                <label for="instaId" class="form-label">Insta ID:</label>
                <input type="text" name="instaId" class="form-control" id="instaId" required>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label for="skillsNumber" class="form-label">How many skills do you want to mention?</label>
                <input type="number" name="skillsNumber" class="form-control" id="skillsNumber" min="1" value="1" required>
            </div>
        </div>
        <input type="hidden" name="folderName" value="<%=folderName%>" >
        <button type="submit" class="btn btn-primary rounded-pill mt-3"> Submit</button>
    </form>
<%- include('partials/footer'); %>